<Window x:Class="Othello.PlayerName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Player Name" Height="230" Width="290.15">
    <WrapPanel>
        <Label Content="Please Enter Player Names:" HorizontalAlignment="Left" Margin="50,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Player A" Margin="50,5,0,0" RenderTransformOrigin="-4.377,1.516"/>
        <TextBox x:Name="txtPlayerNameA" Width="192" Margin="50,0,0,0" Height="25" FontWeight="Bold" FontSize="15"/>
        <Label Content="Player B" Margin="50,0,0,0" RenderTransformOrigin="-4.377,1.516"/>
        <TextBox x:Name="txtPlayerNameB" Width="192" Margin="50,0,0,0" Height="25" FontWeight="Bold" FontSize="15"/>
        <Button x:Name="btnOk" Content="OK" Width="75" Margin="50, 15,0,0" Click="btnOk_Click"/>
        <Button Content="Cancel" Width="75" Margin="40, 15,0,0" Click="btnCancel_Click"/>
    </WrapPanel>
</Window>
